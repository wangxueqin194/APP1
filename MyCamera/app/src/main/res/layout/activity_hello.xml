<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hello">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="@color/BuleTitle"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="15dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:background="@drawable/returnlast"
            android:layout_marginLeft="10dp"
            android:onClick="OnBack"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:src="@drawable/hello"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/arrow"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="130dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/blue"
        android:text="hello"
        android:textSize="17sp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="90dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/blue"
        android:text="你好"
        android:textSize="17sp"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="200dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/green"
        android:text="例句"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/Blue_btn"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="320dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你好，鲍勃，你过得如何啊？"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello, Bob, how are you?"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="60dp"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/listening"
        tools:ignore="MissingConstraints"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/green"
        android:text="添加到我的词汇库"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
