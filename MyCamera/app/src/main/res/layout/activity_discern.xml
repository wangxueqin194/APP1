<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Discern">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="@color/BuleTitle"
        android:layout_alignParentTop="true"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="15dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:background="@drawable/returnlast"
            android:layout_marginLeft="10dp"
            android:onClick="OnBack"
            android:layout_marginStart="10dp" />
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="识别成功"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/green"
            android:text="修改"
            android:textSize="21sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:src="@drawable/apple"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/blue"
        android:text="apple"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@drawable/blue"
        android:text="苹果"
        android:textSize="17sp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="200dp"/>

    </RelativeLayout>


    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/green"
        android:text="例句"
        android:textSize="21sp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue_btn"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="300dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我栽了那些苹果树。"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="I planted those apple trees."
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/loudspeaker"
        android:layout_alignParentRight="true"
        android:layout_marginTop="90dp"
        tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@drawable/green"
        android:text="添加到我的词汇库"
        android:textSize="21sp"
        tools:ignore="MissingConstraints"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>