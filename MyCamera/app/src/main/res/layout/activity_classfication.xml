<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Classfication">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="@color/BuleTitle"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="15dp"
            android:layout_height="27dp"
            android:background="@drawable/returnlast"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:onClick="OnBack"
            android:layout_marginStart="10dp" />
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="版图"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="50dp">

        <Button
            android:id="@+id/fruits"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:background="@drawable/fruits"
            android:layout_alignParentLeft="true"
            android:onClick="fruits" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="      水果"
            android:textSize="20sp"
            android:layout_marginTop="125dp"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/vegetable"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:background="@drawable/vegetable"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="蔬菜"
            android:textSize="20sp"
            android:layout_marginTop="125dp"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/animal"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:background="@drawable/animal"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="195dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="      动物"
            android:textSize="20sp"
            android:layout_marginTop="320dp"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/plant"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:background="@drawable/plant"
            android:layout_marginTop="195dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="植物"
            android:textSize="20sp"
            android:layout_marginTop="320dp"
            android:layout_alignParentRight="true"/>
        <Button
            android:id="@+id/feaniture"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:background="@drawable/furniture"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="390dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="      家具"
            android:textSize="20sp"
            android:layout_marginTop="500dp"
            android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/scene"
            android:layout_width="100dp"
            android:layout_height="105dp"
            android:background="@drawable/scene"
            android:layout_alignParentRight="true"
            android:layout_marginTop="390dp"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="场景"
            android:textSize="20sp"
            android:layout_marginTop="500dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>