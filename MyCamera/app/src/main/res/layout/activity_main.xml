<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/camera"
            android:layout_width="140dp"
            android:layout_height="165dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/jinyu"
            android:onClick="camera" />

        <Button
            android:id="@+id/vocabulary"
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/vocabulary"
            android:onClick="vocabulary" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/classfication"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/wug"
            android:onClick="classfication" />

        <Button
            android:id="@+id/mine"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/mine"
            android:onClick="mine" />
    </RelativeLayout>


</LinearLayout>