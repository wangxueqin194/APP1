<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context=".User">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="@color/BuleTitle"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="15dp"
            android:layout_height="27dp"
            android:background="@drawable/returnlast"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="OnBack"
            android:layout_marginStart="10dp" />
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="用户中心"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:orientation="vertical"
        android:background="@color/White">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/White"
                android:stateListAnimator="@null"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="头像"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"/>
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
            <ImageView
                android:id="@+id/next1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/White"
                android:stateListAnimator="@null"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="昵称"
                android:textSize="23sp"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Yoon"
                android:gravity="center_horizontal"
                android:layout_toLeftOf="@+id/next2"
                android:textSize="23sp" />
            <ImageView
                android:id="@+id/next2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/White"
                android:stateListAnimator="@null"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="性别"
                android:textSize="23sp"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="女"
                android:gravity="center_horizontal"
                android:textSize="23sp"
                android:layout_toLeftOf="@+id/next3" />
            <ImageView
                android:id="@+id/next3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/White"
                android:stateListAnimator="@null"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="年龄"
                android:textSize="23sp"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="8"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:layout_toLeftOf="@+id/next4" />
            <ImageView
                android:id="@+id/next4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/White"
                android:stateListAnimator="@null"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="年级"
                android:textSize="23sp"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="二年级"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:layout_toLeftOf="@+id/next5" />
            <ImageView
                android:id="@+id/next5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/White"
                android:stateListAnimator="@null"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="自我介绍"
                android:textSize="23sp"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="无"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:layout_toLeftOf="@id/next6" />
            <ImageView
                android:id="@+id/next6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>