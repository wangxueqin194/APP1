<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Fruits">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="@color/BuleTitle"
        tools:ignore="MissingConstraints">
        <Button
            android:layout_width="15dp"
            android:layout_height="27dp"
            android:background="@drawable/returnlast"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:onClick="OnBack"
            android:layout_marginStart="10dp" />
        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="水果"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:focusable="false"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="50dp"
            android:paddingVertical="35dp">
            <Button
                android:id="@+id/fruits"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/addpicture"
                android:layout_alignParentLeft="true" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="apple"
                android:textSize="20sp"
                android:layout_marginTop="110dp"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/vegetable"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/addpicture"
                android:layout_alignParentRight="true" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="apricot"
                android:textSize="20sp"
                android:layout_marginTop="110dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/animal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/addpicture"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="170dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="avocado"
                android:textSize="20sp"
                android:layout_marginTop="280dp"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/plant"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/addpicture"
                android:layout_alignParentRight="true"
                android:layout_marginTop="170dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="banana"
                android:textSize="20sp"
                android:layout_marginTop="280dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/feaniture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/addpicture"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="340dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="bayberry"
                android:textSize="20sp"
                android:layout_marginTop="450dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"/>
            <Button
                android:id="@+id/scene"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/addpicture"
                android:layout_alignParentRight="true"
                android:layout_marginTop="340dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="blueberry"
                android:textSize="20sp"
                android:layout_marginTop="450dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"/>

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>